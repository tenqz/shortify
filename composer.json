{
    "name": "tenqz/shortify",
    "type": "library",
    "keywords": ["url", "shortener"],
    "homepage": "https://github.com/tenqz/shortify",
    "description": "ðŸš€ Lightweight PHP library to shorten URLs effortlessly. Convert long links into short, memorable ones with zero dependencies. Perfect for APIs, custom shorteners, and frameworks like Laravel/Symfony.",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Patsay",
            "email": "smmartbiz@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Tenqz\\Shortify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tenqz\\Shortify\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    }
}
